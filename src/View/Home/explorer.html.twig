{% extends 'layout.html.twig' %}
{% block content %}
    <div style="height: 80px"></div>
    <h1 class="text-white font-weight-bold mb-5">Explorer</h1>
    <div class="row">
    {% for user in users %}
            <div class="col-md-2 text-white">
                <div>
                    <div class="one card">
                        <div class="d-flex justify-content-center">
                            <a href="/User/showAllTracksByProfil/{{ user.id }}">
                            <img src="https://i.imgur.com/hczKIze.jpg" width="140" class="rounded-circle py-2">
                            </a>
                        </div>
                        <div class="text-center font-weight-bold"><span class="name">{{ user.pseudo }}</span></div>
                        <div class="text-center py-2"><span class="total d-block pt-2"></span> <span
                                    class="money">{{ user.nb_track }}</span> <i class="fas fa-music"> </i></div>
                    </div>
                </div>
            </div>

    {% endfor %}
    </div>
{% endblock %}


