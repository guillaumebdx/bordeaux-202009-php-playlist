
{% block content %}
    <section>
        <div class="title-addPlay">
            <h1>Lorem ipsum dolor<br> sit amet,<br>consecteur</h1>
        </div>
    </section>

    <div class="button-addPlay" align="center">
        <button type="button" class="btn-grad btn-primary" data-toggle="modal" data-target="#add_data_Modal" >Ajouter un morceau Ã  la playlist</button>
    </div>

    <div class="modal fade" id="add_data_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal1-title1" id="exampleModalLabel">Ajoute ta musique</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                {% include 'Home/add.html.twig' %}

            </div>
        </div>
    </div>

    <div class="dayPlaylistTitle text-white"><h3>Playlist du {{ playlist.date }}</h3></div>

        <div class="small_container">

            <div class="container-card">
                {% for track in tracks %}
                    <div class="card-play">
                        <div class="box vidBx">
                            <div class="content">
                                <iframe id="video" src="https://www.youtube.com/embed/{{ track.url }}?enablejsapi=1&html5=1.?modestbranding=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                            </div>
                        </div>

                        <div class="box contentBx">
                            <div class="content">

                                <div class="title-card">{{ track.title }} - {{ track.artist }}</div>
                                <!-- TODO Taf de Audrey front -->

                                <div class="like------------">


                                </div>

                            </div>
                        </div>
                    </div>
                    {% else %}
                        <h1 class="text-white">Il n'y a pas encore de musique dans la {{ playlist.date }} ajoute en une!</h1>
                {% endfor %}
            </div>
        </div>

{% endblock %}